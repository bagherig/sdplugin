{
  "SDKVersion": 2,
  "Author": "Moeen Bagheri",
  "CodePath": "html/app.html",
  "Description": "DotA-2 game plugin with timer and event notifications.",
  "Category": "Games",
  "Icon": "static/images/timer",
  "CategoryIcon": "static/images/timer",
  "Name": "DotA-2 Game Plugin",
  "Version": "1.0",
  "URL": "https://www.moeenbagheri.com",
  "Software": {
    "MinimumVersion": "5.0"
  },
  "OS": [
    {
      "Platform": "mac",
      "MinimumVersion": "10.11"
    },
    {
      "Platform": "windows",
      "MinimumVersion": "10"
    }
  ],
  "ApplicationsToMonitor": ["dota2.exe"],
  "Actions": [
    {
      "Name": "Main Timer",
      "UUID": "com.bagherig.dota2.timer",
      "Icon": "static/images/timer",
      "Tooltip": "Main timer button for pausing, resuming, and displaying events.",
      "States": [
        {
          "Image": "static/images/timer",
          "Title": "00:00",
          "TitleAlignment": "middle"
        }
      ],
      "PropertyInspectorPath": "html/timer.html"
    },
    {
      "Name": "Event Display",
      "UUID": "com.bagherig.dota2.display",
      "Icon": "static/images/display",
      "Tooltip": "Displays the occurring event names.",
      "States": [
        {
          "Image": "static/images/display",
          "Title": "",
          "TitleAlignment": "middle",
          "FontSize": 12
        }
      ],
      "PropertyInspectorPath": "html/display.html"
    },

    {
      "Name": "Increment Timer",
      "UUID": "com.bagherig.dota2.increment",
      "Icon": "static/images/add",
      "Tooltip": "Increment the timer by one second.",
      "States": [
        {
          "Image": "static/images/increment",
          "Title": "1",
          "TitleAlignment": "top",
          "FontSize": 12
        }
      ],
      "PropertyInspectorPath": "html/increment.html"
    },
    {
      "Name": "Decrement Timer",
      "UUID": "com.bagherig.dota2.decrement",
      "Icon": "static/images/minus",
      "Tooltip": "Decrement the timer by one second.",
      "States": [
        {
          "Image": "static/images/decrement",
          "Title": "1",
          "TitleAlignment": "top",
          "FontSize": 12
        }
      ],
      "PropertyInspectorPath": "html/decrement.html"
    },
    {
      "Name": "Mute/Unmute Alerts",
      "UUID": "com.bagherig.dota2.mute",
      "Icon": "static/images/mute",
      "Tooltip": "Mute/Unmute Alert Sounds",
      "States": [
          {
          "Image": "static/images/unmuted",
          "Title": "ON",
          "ShowTitle": false
        },
        {
          "Image": "static/images/muted",
          "Title": "OFF",
          "ShowTitle": false
        }
      ],
      "PropertyInspectorPath": "html/mute.html"
    },
    {
      "Name": "Event Image",
      "UUID": "com.bagherig.dota2.image",
      "Icon": "static/images/image",
      "Tooltip": "Displays event image.",
      "States": [
          {
          "Image": "static/images/blank",
          "ShowTitle": false
        }
      ],
      "PropertyInspectorPath": "html/image.html"
    }
  ]
}
